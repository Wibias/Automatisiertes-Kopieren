<mah:MetroWindow x:Class="Automatisiertes_Kopieren.AboutWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="&#220;ber Automatisiertes Kopieren" Height="285" Width="275">
    <StackPanel Margin="20">
        <Image Source="{StaticResource AppIcon}" Width="50" Height="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
        <TextBlock Text="Automatisiertes Kopieren" FontSize="12" FontWeight="Bold" Margin="0 0 0 10" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Version: " VerticalAlignment="Center" FontSize="12" HorizontalAlignment="Center"/>
            <TextBlock x:Name="VersionTextBlock" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Content="Nach Updates suchen" Click="OnSearchUpdateClicked" HorizontalAlignment="Center" Margin="0 20" FontSize="10"/>
        <Rectangle Height="1" Fill="LightGray" />   
     <Button Content="Schliessen" Click="OnOkButtonClicked" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 10" FontSize="10"/>
    </StackPanel>
</mah:MetroWindow>